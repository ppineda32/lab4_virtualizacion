extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 New Movie

        // register form
        form(method='POST' action='/create')
          div.form-group
            label(for='name') Name:
            input#name.form-control(type='text', placeholder='example \'The Matrix\'' name='name')
          div.form-group
            label(for='genre') Genre:
            input#email.form-control(type='text', placeholder='example \'Action\'' name='genre')
          div.form-group
            label(for='year') Year:
            input#favoriteBook.form-control(type='number', placeholder='example \'2001\'' name='year')
          button.btn.btn-primary(type='submit') Create
