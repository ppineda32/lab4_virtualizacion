extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 New Movie

        <script src="//cdn.jsdelivr.net/jquery/2.1.4/jquery.js"></script>
        <script src="https://unpkg.com/blob-util/dist/blob-util.min.js"></script>
        // register form
        form(method='POST' action='/create')
          div.form-group
            label(for='name') Name:
            input.form-control(type='text', placeholder='example \'The Matrix\'' name='name')
          div.form-group
            label(for='genre') Genre:
            input.form-control(type='text', placeholder='example \'Action\'' name='genre')
          div.form-group
            label(for='year') Year:
            input.form-control(type='number', placeholder='example \'2001\'' name='year')
          div.form-group
            label(for='load-image') Image:
            input.form-control(type='file', placeholder='example \'matrix.jpg\'' name='image')
            button.btn.upload(type='button',id='upload') Upload
            <script src="/javascripts/upload.js"> </script>
          button.btn.btn-primary(type='submit') Create


          
